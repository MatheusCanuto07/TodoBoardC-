@model TODO.Views.Shared.Components.Section.SectionViewModel

<div style="min-width: 400px; height: 700px; padding-right: 0px; padding-left: 0px;" class="card ui-widget-content">
 <!-- Cards -->
 <div class="card-header d-flex justify-content-between align-content-center">
  <h3>@Model.Title</h3>
  <i class="bi bi-chevron-down align-self-center"></i>
 </div>

 <div data-board="doing" class="sortableDoing h-100">
    @foreach (var card in Model.Cards)
    {
        @await Html.PartialAsync("Components/Card/Card", card);
    }
 </div>
</div>
